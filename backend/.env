# ============================================
# SENTINEL Cyber Intelligence Platform
# Backend Environment Configuration
# ============================================

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=4000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://sentinel_user:sentinel_secure_pass@localhost:5432/sentinel_core

# Database Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Configuration
REDIS_URL=redis://:sentinel_redis_pass@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sentinel_redis_pass

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Security
JWT_SECRET=sentinel_jwt_secret_key_change_in_production_2024
JWT_EXPIRES_IN=24h
SESSION_SECRET=sentinel_session_secret_change_in_production_2024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/sentinel.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# External Integrations
# MISP
MISP_URL=
MISP_API_KEY=
MISP_VERIFY_SSL=false

# MITRE ATT&CK
MITRE_ATTACK_VERSION=14.1
MITRE_ATTACK_UPDATE_INTERVAL=86400000

# OpenCTI
OPENCTI_URL=
OPENCTI_API_KEY=

# TheHive
THEHIVE_URL=
THEHIVE_API_KEY=

# VirusTotal
VIRUSTOTAL_API_KEY=

# AlienVault OTX
ALIENVAULT_API_KEY=

# Shodan
SHODAN_API_KEY=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@sentinel.local

# AI/ML Configuration
GOOGLE_GENAI_API_KEY=
OPENAI_API_KEY=
ML_MODEL_PATH=./models
ML_INFERENCE_TIMEOUT=30000

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.pdf,.txt,.csv,.json,.xml,.pcap,.log,.zip

# Audit & Compliance
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_DETAILED_AUDIT=true

# Feature Flags
ENABLE_GRAPHQL=true
ENABLE_WEBSOCKETS=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# Development/Debug
DEBUG=sentinel:*
ENABLE_QUERY_LOGGING=true
ENABLE_SWAGGER=true
